CC=g++
CFLAGS=-std=c++11 -l pthread -g
obj=LogFile.o Logger.o Thread.o test_for_asylog.o
test_for_asylog:$(obj)
	$(CC) -o $@ $^ $(CFLAGS)
test_for_asylog.o:test_for_asylog.cc ../LogFile.h  ../Logger.h
	$(CC) -c $^ $(CFLAGS)
LogFile.o:../LogFile.cc ../LogFile.h ../Mutex.h ../BlockQueue.h
	$(CC) -c $^ $(CFLAGS)
Logger.o:../Logger.h ../Logger.cc
	$(CC) -c $^ $(CFLAGS)
Thread.o:../Thread.h ../Thread.cc
	$(CC) -c $^ $(CFLAGS)

clean:
	rm *.o *.log  ../*.gch core
